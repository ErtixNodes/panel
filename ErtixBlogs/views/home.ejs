<%- include('partials/header'); -%>

<div class="bg-gray-100">
    <div class="container mx-auto py-8">
        <div class="pb-6">
            <h1 class="text-3xl font-bold">Latest Posts</h1>
            <hr class="my-4">
        </div>
        
        <% posts.forEach(post => { %>
        <div class="bg-white shadow-md rounded-lg mb-6">
            <div class="px-6 py-4">
                <h2 class="text-2xl font-bold text-gray-800"><%= post.title %></h2>
                <p class="mt-2 text-gray-600"><%- post.content.replace(/\n/g, '<br>') %></p>
                <div class="flex items-center justify-between mt-4">
                    <div class="text-sm text-gray-600">Published on <span class="font-bold"><%= post.publishedOn %></span></div>
                    <a href="/posts/<%= post.id %>" class="text-blue-500 hover:text-blue-700">Read More</a>
                </div>
            </div>
        </div>
        <% }); %>

    </div>
</div>

<div class="text-center pb-4">
    <a href="ertixnodes.xyz" class="text-gray-600 hover:text-blue-600">Made with <span style="color:red">&hearts;</span> by ErtixNodes</a>
</div>

<%- include('partials/footer'); -%>
